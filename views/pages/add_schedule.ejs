<% include ../partials/header.ejs%>
<div class="container" style="margin-top: 5%">
    <h3><%=title%></h3>
    <form action="/hours" method="post">
        <div class="row">
            <label for="sid">Student ID#</label>
            <input class="u-full-width" type="text" placeholder="12345678" name="sid">
        </div>
        <div class="row">
            <div class="six columns">
                <label for="year">Year</label>
                <input class="u-full-width" type="number" placeholder="2019" name="year" min="2016" maxlength="4">
            </div>
            <div class="six columns">
                <label for="term">Term</label>
                <select class="u-full-width" name="term">
                    <option selected="selected" disabled>Select the term</option>
                    <option value="Winter">Winter</option>
                    <option value="Summer">Summer</option>
                    <option value="Fall">Fall</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="four columns">
                <label for="day">Day</label>
                <select class="u-full-width" name="day">
                    <option selected="selected" disabled>On which day will you grace us?</option>
                    <option value="mon">Monday</option>
                    <option value="tue">Tuesday</option>
                    <option value="wed">Wednesday</option>
                    <option value="thu">Thursday</option>
                    <option value="fri">Friday</option>
                    <option value="sat">Saturday</option>
                </select>
            </div>
            <div class="four columns">
                <label for="timein">Time In</label>
                <select class="u-full-width" name="intime">
                    <option selected="selected" disabled>What time can you show up?</option>
                    <option value="10">10:00 am</option>
                    <option value="11">11:00 am</option>
                    <option value="12">12:00 pm</option>
                    <option value="13">1:00 pm</option>
                    <option value="14">2:00 pm</option>
                    <option value="15">3:00 pm</option>
                    <option value="16">4:00 pm</option>
                    <option value="17">5:00 pm</option>
                    <option value="18">6:00 pm</option>
                </select>
            </div>
            <div class="four columns">
                <label for="timeout">Time Out</label>
                <select class="u-full-width" name="outtime">
                    <option selected="selected" disabled>What time will you leave us?</option>
                    <option value="10">10:00 am</option>
                    <option value="11">11:00 am</option>
                    <option value="12">12:00 pm</option>
                    <option value="13">1:00 pm</option>
                    <option value="14">2:00 pm</option>
                    <option value="15">3:00 pm</option>
                    <option value="16">4:00 pm</option>
                    <option value="17">5:00 pm</option>
                    <option value="18">6:00 pm</option>
                </select>
            </div>
        </div>
        <input class="button-primary" type="submit" value="Submit">
    </form>
</div>
<% include ../partials/footer.ejs%>