<% include ../partials/header.ejs%>
<div class="container" style="margin-top: 5%">
    <h3><%=title%></h3>
    <form action="/join_project" method="post">
        <div class="row">
            <label for="sid">Student ID</label>
            <input class="u-full-width" type="text" placeholder="12345678" name="sid" autocomplete="off" required autofocus>
        </div>
        <div class="u-full-width">
            <label for="pid">Project</label>
            <select class="u-full-width" name="pid" required>
                <option selected="selected" disabled>Choose a project</option>
                <% for(let i = 0; i < projects.length; i++){%>
                    <option value="<%=projects[i].pid%>"><%=projects[i].title%>: <%=projects[i].description%></option>
                <%}%>
            </select>
        </div>
        <input class="button-primary" type="submit" value="Submit">
    </form>
</div>
<% include ../partials/footer.ejs%>